<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_marginBottom"
        android:layout_marginStart="@dimen/card_marginStart"
        android:layout_marginEnd="@dimen/card_marginEnd"
        card_view:cardCornerRadius="@dimen/card_cornerRadius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_imageHeight"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_linearMarginEnd"
                android:layout_marginStart="@dimen/card_linearMarginStart"
                android:layout_marginTop="@dimen/card_linearMarginTop">

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/card_nameTextSize"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/card_check"
                    android:layout_marginStart="@dimen/card_checkButtonMarginStart"
                    android:layout_width="@dimen/card_checkButtonWidth"
                    android:layout_height="@dimen/card_checkButtonHeight" />

            </LinearLayout>

            <TextView
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_contentMarginBottom"
                android:layout_marginEnd="@dimen/card_contentMarginEnd"
                android:layout_marginStart="@dimen/card_contentMarginStart"
                android:textColor="@color/cardContentTextColor"
                android:textSize="@dimen/card_contentTextSize" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>